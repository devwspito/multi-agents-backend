# ==================================================
# EDUCATIONAL SOFTWARE ARCHITECTURE - ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# ==================================================
# SERVER CONFIGURATION
# ==================================================

# Server Port (default: 3000)
PORT=3000

# Environment (development, staging, production)
NODE_ENV=development

# Base URL for the application (used for webhooks and redirects)
BASE_URL=http://localhost:3000

# ==================================================
# DATABASE CONFIGURATION
# ==================================================

# MongoDB Connection String
# Local development: mongodb://localhost:27017/agents_software_arq
# Production: mongodb+srv://username:password@cluster.mongodb.net/agents_software_arq
MONGODB_URI=mongodb://localhost:27017/agents_software_arq

# ==================================================
# AUTHENTICATION & SECURITY
# ==================================================

# JWT Secret for token signing (generate a strong random string)
# Example: openssl rand -base64 64
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters

# JWT Token Expiration (default: 7d)
JWT_EXPIRE=7d

# Require email verification for new users (true/false)
REQUIRE_EMAIL_VERIFICATION=false

# ==================================================
# EDUCATIONAL DATA ENCRYPTION
# ==================================================

# Student Data Encryption Key (AES-256)
# Generate with: openssl rand -base64 32
STUDENT_DATA_KEY=your_aes_256_encryption_key_for_student_data

# Educational Records Encryption Key
EDUCATIONAL_RECORDS_KEY=your_educational_records_encryption_key

# ==================================================
# GITHUB INTEGRATION
# ==================================================

# GitHub Personal Access Token (for repository operations)
GITHUB_TOKEN=ghp_your_github_personal_access_token

# GitHub App Configuration (for enhanced integration)
GITHUB_APP_ID=your_github_app_id
GITHUB_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_github_app_private_key\n-----END PRIVATE KEY-----"
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# ==================================================
# CLAUDE AI INTEGRATION
# ==================================================

# Anthropic API Key for Claude integration
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# Default Claude model to use
DEFAULT_CLAUDE_MODEL=claude-3-sonnet-20240229

# Workspace base directory for multi-repo projects
WORKSPACE_BASE=./workspaces

# ==================================================
# CORS & FRONTEND CONFIGURATION
# ==================================================

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:3001

# Learning Management System Origins (comma-separated)
LMS_ORIGINS=https://canvas.instructure.com,https://blackboard.university.edu,https://moodle.school.edu

# ==================================================
# EDUCATIONAL COMPLIANCE SETTINGS
# ==================================================

# FERPA Compliance Mode (strict/standard)
FERPA_COMPLIANCE_MODE=strict

# COPPA Compliance (enabled for under-13 user protection)
COPPA_COMPLIANCE=enabled

# WCAG Accessibility Level (AA/AAA)
WCAG_COMPLIANCE_LEVEL=AA

# Student Data Retention Period (in days)
STUDENT_DATA_RETENTION_DAYS=2555  # 7 years

# Educational Audit Log Level (basic/detailed/comprehensive)
AUDIT_LOG_LEVEL=comprehensive

# ==================================================
# EMAIL CONFIGURATION (for notifications)
# ==================================================

# SMTP Configuration for educational notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_educational_email@school.edu
SMTP_PASS=your_email_password

# Email Templates Configuration
EMAIL_FROM_NAME=Educational Technology Team
EMAIL_FROM_ADDRESS=noreply@school.edu

# ==================================================
# MCP SERVERS CONFIGURATION
# ==================================================

# Educational Analytics MCP Server
ANALYTICS_MODE=educational
PRIVACY_PRESERVATION=differential_privacy
LEARNING_OUTCOMES=tracked
EARLY_WARNING=enabled
PERSONALIZATION=adaptive_learning

# LMS Integration Settings
LMS_CANVAS_API_KEY=your_canvas_api_key
LMS_BLACKBOARD_API_KEY=your_blackboard_api_key
LMS_MOODLE_API_KEY=your_moodle_api_key

# Student Data Compliance
COMPLIANCE_FERPA_ENABLED=true
COMPLIANCE_COPPA_ENABLED=true
COMPLIANCE_GDPR_ENABLED=true

# Accessibility Testing
ACCESSIBILITY_WCAG_VERSION=2.1
ACCESSIBILITY_COMPLIANCE_LEVEL=AA
ACCESSIBILITY_AUTO_TEST=true

# ==================================================
# LOGGING & MONITORING
# ==================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Educational Event Logging
EDUCATIONAL_EVENTS_LOG=true

# Performance Monitoring
PERFORMANCE_MONITORING=enabled

# Student Data Access Monitoring
STUDENT_DATA_ACCESS_LOG=comprehensive

# ==================================================
# BACKUP & DISASTER RECOVERY
# ==================================================

# Database Backup Configuration
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
DB_BACKUP_RETENTION_DAYS=30

# Educational Continuity Settings
DISASTER_RECOVERY_MODE=educational_priority

# ==================================================
# DEVELOPMENT & TESTING
# ==================================================

# Development Tools
DEV_TOOLS_ENABLED=true

# Test Database (for running tests)
TEST_MONGODB_URI=mongodb://localhost:27017/agents_software_arq_test

# Mock Educational Data (for development)
MOCK_STUDENT_DATA=true
MOCK_LMS_INTEGRATION=true

# Educational Load Testing
LOAD_TEST_STUDENT_COUNT=1000
LOAD_TEST_CONCURRENT_USERS=100

# ==================================================
# CLAUDE CODE AGENTS CONFIGURATION
# ==================================================

# Agent Response Timeouts (in milliseconds)
AGENT_TIMEOUT_PRODUCT_MANAGER=30000
AGENT_TIMEOUT_PROJECT_MANAGER=45000
AGENT_TIMEOUT_TECH_LEAD=60000
AGENT_TIMEOUT_SENIOR_DEVELOPER=120000
AGENT_TIMEOUT_JUNIOR_DEVELOPER=90000
AGENT_TIMEOUT_QA_ENGINEER=180000

# Educational Context Settings
EDUCATIONAL_DOMAIN_EXPERTISE=k12_higher_ed_corporate
LEARNING_ANALYTICS_ENABLED=true
ADAPTIVE_LEARNING_MODE=personalized

# ==================================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# ==================================================

# Educational Content Management
CONTENT_MANAGEMENT_API_KEY=your_content_management_api_key

# Student Information System
SIS_INTEGRATION_URL=https://sis.school.edu/api
SIS_API_KEY=your_sis_api_key

# Educational Analytics Platform
ANALYTICS_PLATFORM_URL=https://analytics.school.edu
ANALYTICS_API_KEY=your_analytics_api_key

# Assessment Platform Integration
ASSESSMENT_PLATFORM_API_KEY=your_assessment_platform_api_key

# ==================================================
# PRODUCTION SECURITY (Production Only)
# ==================================================

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Security Headers
SECURITY_HSTS_ENABLED=true
SECURITY_CSP_ENABLED=true

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ==================================================
# NOTES
# ==================================================
# 
# Required for basic functionality:
# - MONGODB_URI
# - JWT_SECRET
# - STUDENT_DATA_KEY
#
# Required for GitHub integration:
# - GITHUB_TOKEN
#
# Required for Claude AI features:
# - ANTHROPIC_API_KEY
#
# Required for production:
# - All security keys properly generated
# - All compliance settings configured
# - All monitoring and logging enabled
#
# Educational Compliance Notes:
# - FERPA requires encrypted student data storage
# - COPPA requires parental consent for under-13 users
# - WCAG requires accessibility compliance testing
# - All educational data must have audit trails
#