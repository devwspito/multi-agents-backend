{
  "name": "student-data-compliance",
  "description": "Educational data compliance and privacy protection MCP server",
  "executable": "node",
  "args": ["./mcp-servers/student-data-compliance-server.js"],
  "env": {
    "FERPA_MODE": "enabled",
    "COPPA_MODE": "enabled",
    "AUDIT_LOG_LEVEL": "comprehensive",
    "DATA_ENCRYPTION": "required",
    "PII_DETECTION": "enabled"
  },
  "capabilities": [
    "pii_detection",
    "data_anonymization",
    "ferpa_compliance_checking",
    "coppa_age_verification",
    "audit_trail_generation",
    "data_retention_management"
  ],
  "compliance_features": {
    "ferpa_compliant": true,
    "coppa_compliant": true,
    "gdpr_aware": true,
    "audit_logging": "comprehensive",
    "data_minimization": true,
    "consent_management": true
  },
  "educational_context": {
    "student_privacy": "maximum_protection",
    "parent_rights": "k12_enabled",
    "institutional_compliance": "higher_ed_ready"
  }
}